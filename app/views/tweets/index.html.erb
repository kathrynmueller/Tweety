<div class="row">

  <div class="col-md-3">
  </div>

  <div class="col-md-6">

    <p id="notice"><%= notice %></p>

    <h1>Your Tweets</h1>


        <% @tweets.each do |tweet| %>
          <div class="media some-space">
          <%= image_tag tweet.user.avatar.url, class: "mr-3 avatar", alt: "User avatar"%>
            <div class="media-body">
              <h5 class="mt-0">@<%= link_to tweet.user.username, show_user_path(id: tweet.user_id) %></h5>
                <%= tweet.message.html_safe %><br>
                <table>
                  <tr>
                    <td><%= link_to 'Edit', edit_tweet_path(tweet) %></td>
                    <td><%= link_to 'Delete', tweet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  </tr>
                </table>
              </div>
            </div>




        <% end %>


    <br>

    <%= link_to 'Write a New Tweet', new_tweet_path, class: "button btn btn-default" %>

    </div>

  <div class="col-md-3">
  </div>

</div>
